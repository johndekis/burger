<h1>Eat Da Burger</h1>

<h2>Burgers</h2>
<ul>
  {{#each burgers}}
     {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured Burgers!</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}  	    
    {{/if}}
  {{/each}}
</ul>


<h2>Add a Burger</h2>

<form class="burger-form">

{{!-- </form> action='/burgers/update/{{this.id}}?_method=PUT" method="POST"'> --}}
  <div class="form-group">
    <label for="burgerAdd">Burger Name:</label>
    <input type="text" id="burgerAdd" name="burger_name">
    <br><br>
    <button type="submit">Add Burger!</button>
  </div>
  
</form>

